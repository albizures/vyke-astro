---
import { type Link } from '../link'
import { type SiteConfig } from '../site'
import Footer from './footer.astro'

export type Props = {
	siteConfig: SiteConfig
	otherLinks?: Array<Link>
}

const { siteConfig } = Astro.props

const openSourceLinks = [
	{
		href: 'https://github.com/albizures/vyke-results',
		label: '@vyke/results',
	},
	{
		href: 'https://github.com/albizures/vyke-dom',
		label: '@vyke/dom',
	},
	{
		href: 'https://github.com/albizures/vyke-tsdocs',
		label: '@vyke/tsdocs',
	},
]

const projectLinks = [
	{ href: 'https://clock.vyke.dev', label: 'Online Clock' },
	{ href: 'https://flowmodoro.vyke.dev', label: 'Flowmodoro App' },
	{ href: 'https://webtools.vyke.dev', label: 'WebTools by Vyke' },
].filter((link) => {
	return !link.href.includes(siteConfig.website)
})
---

<Footer
	openSourceLinks={openSourceLinks}
	projectLinks={projectLinks}
>
	<slot name="twitter-icon" slot="twitter-icon" />
	<slot name="github-icon" slot="github-icon" />
</Footer>
